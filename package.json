    "db:generate": "pnpm --filter server db:generate",
    "db:migrate": "pnpm --filter server db:migrate",
    "db:start": "pnpm --filter server db:start",
    "db:watch": "pnpm --filter server db:watch",
    "db:stop": "pnpm --filter server db:stop",
    "db:down": "pnpm --filter server db:down"
